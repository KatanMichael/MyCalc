<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width= "match_parent"
    android:layout_height= "match_parent"
    android:orientation="vertical"
    android:id="@+id/myLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Michael calculator - corparations"
        android:textSize="25sp"
       android:layout_margin="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/waitForInput"
        android:textSize="25sp"
        android:id="@+id/Result_tv"
        android:layout_margin="20dp"
        android:gravity="center"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/btn_1"
            android:layout_margin="10dp"
            android:textSize="@dimen/textsize"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btn_2"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/textsize"
            />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3"
            android:layout_weight="1"
            android:textSize="@dimen/textsize"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/textsize"
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/btn_5"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/textsize"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="6"
            android:textSize="@dimen/textsize"
            android:layout_weight="1"
            android:id="@+id/btn_6"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/btn_7"
            android:textSize="@dimen/textsize"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/btn_8"
            android:layout_margin="10dp"
            android:textSize="@dimen/textsize"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="9"
            android:textSize="@dimen/textsize"
            android:id="@+id/btn_9"
            android:layout_weight="1"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btn_minus"
            android:textSize="@dimen/mathtextsize"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btn_plus"
            android:layout_margin="10dp"
            android:textSize="@dimen/mathtextsize"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="="
            android:textSize="@dimen/mathtextsize"
            android:id="@+id/btn_equal"
            android:layout_weight="1"

            />


    </LinearLayout>


</LinearLayout>
